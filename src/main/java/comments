        Integer id;
        String name;
        Boolean public;

    Role
        Integer id;
        Boolean right_to_view;
        Boolean right_ping;
        Boolean right_edit;
        Boolean right_admin;

    File
        Integer id;
        String name;
        Integer id_group;
        Integer id_category;
        Date data_create;
        String link;

    ResourceChat
        Integer id_group;
        Integer id_resource_chat;

    MemberInChat
        Integer id_chat;
        Integer id_member;

    MemberInGroup
